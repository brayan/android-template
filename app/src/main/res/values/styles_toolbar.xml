<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:attr/colorPrimary</item>
        <item name="android:elevation">@dimen/toolbar_elevation</item>
        <item name="android:minHeight">?android:attr/actionBarSize</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="subtitleTextAppearance">@style/ToolbarSubtitle</item>
        <item name="titleTextAppearance">@style/ToolbarTitle</item>
    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="ToolbarSubtitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">@dimen/text_size_xxsmall</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>